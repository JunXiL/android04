<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liguofu.romeoseatao_project.activty.LiveDatielActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/iv_livedetail_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fanhui"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="直播室"
            android:textSize="20sp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/iv_livedetail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/studio_icon_share"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

    <io.vov.vitamio.widget.CenterLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        >
        <io.vov.vitamio.widget.VideoView
            android:id="@+id/vv_live_detail"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </io.vov.vitamio.widget.CenterLayout>

    <WebView
        android:id="@+id/wv_livedetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
