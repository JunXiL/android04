<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/civ_home_lv_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            >
            <TextView
                android:id="@+id/tv_home_lv_item_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="viudv"
                />
            <TextView
                android:id="@+id/tv_home_lv_item_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ncdoi"
                />
        </LinearLayout>

        <Button
            android:id="@+id/bt_home_lv_item"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/listview_bt_bg"
            android:text="关注"
            android:textColor="#ff0000"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_home_lv_item_mid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:minWidth="10dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_home_lv_item_three"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="cbicdcdo"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_home_lv_item_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6699cc"
            android:textColor="#ffffff"
            android:text="ncoiv"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_home_lv_item_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6699cc"
            android:textColor="#ffffff"
            android:text="ncoiv"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_home_lv_item_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6699cc"
            android:textColor="#ffffff"
            android:text="ncoiv"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_home_lv_item_senve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ncdoiv"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/home_icon_like"
            />
        <TextView
            android:id="@+id/tv_home_lv_item_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/home_icon_comment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/tv_home_lv_item_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

</LinearLayout>